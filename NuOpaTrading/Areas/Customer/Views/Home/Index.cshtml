@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">NuOpa's Games</h2>
        </div>
    </div>
</div>
<br/><br/>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>
                Name
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%"><img src="@obj.ImageUrl" /></td>
                <td width="25%">
                    @obj.Title
                </td>
                @*<td width="25%">
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-secondary" asp-controller="Game" asp-action="Details">Details</a>
                    </div>
                </td>*@
            </tr>
        }
    </tbody>
</table>