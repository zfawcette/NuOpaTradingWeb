@model NuOpaTrading.Models.Search

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Find Games</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Query"></label>
            <input asp-for="Query" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width=150px">Search</button>
        <a asp-controller="Game" asp-action="Index" class="btn btn-secondary" style="width=150px">Back to Games</a>
    </div>
</form>
