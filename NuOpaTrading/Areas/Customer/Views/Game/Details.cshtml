@model DetailsVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@Model.Title</h2>
        </div>
        <div class="col-6 text-end">
            <form method="post">
                <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Back To List</a>
            </form>
        </div>
    </div>
</div>
<br />
<br />

<divm class="container">
    <div class="pb-4">
        <div class="row col-6">
            <div class="pb-2">
                <img src="@Model.CoverUrl" />
            </div>
            <div class="col-12">
                <iframe referrerpolicy="no-referrer-when-downgrade" width="916" height="515" src="@Model.TrailerURL" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
        <div>
            @foreach (var url in @Model.ImageURLS)
            {
                <img src="@url" />
            }
        </div>
    </div>
    <div>
        <div>
            <label>
                Genres
                @foreach (var genre in @Model.Genres)
                {
                    <label class="btn btn-secondary">@(genre)</label>
                }
            </label>
        </div>
        <div>
            @Model.Description
        </div>
    </div>
</div>