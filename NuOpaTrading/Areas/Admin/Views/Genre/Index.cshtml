@model IEnumerable<Genre>
@{
    ViewData["Title"] = "Genre Management";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Genre Management</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Genre" asp-action="Upsert" class="btn btn-primary">Add New Genre</a>
        </div>
    </div>
</div>
<br/><br/>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Genre Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Genre" asp-action="Upsert" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Genre" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>